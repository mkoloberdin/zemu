<root>
  <Drives>
    <A></A>
    <B></B>
    <C></C>
    <D></D>

    <NoDelay>no</NoDelay>
    <AppendBoot>/opt/zemu/share/boot/BOOT.$B</AppendBoot>
  </Drives>

  <Roms>
    <32k>/opt/zemu/share/roms/pentagon.rom</32k>
    <Comment>
      <48>/opt/zemu/share/roms/128p-1.rom</48>
      <128>/opt/zemu/share/roms/128p-0.rom</128>
    </Comment>

    <TrDos>/opt/zemu/share/roms/trdos.rom</TrDos>
  </Roms>

  <ArcPluginsDir>/opt/zemu/share/arc/</ArcPluginsDir>

  <UseFlipSurface>no</UseFlipSurface>
  <FullScreen>no</FullScreen>
  <Scale2x>yes</Scale2x>
  <Scanlines>no</Scanlines>

  <Enable512>yes</Enable512>
  <EnableEFF7>yes</EnableEFF7>
  <Enable1024>yes</Enable1024>
  <OldEFF7Mode>no</OldEFF7Mode>
  <UseEFF7Turbo>no</UseEFF7Turbo>

  <Keys>/opt/zemu/share/config/keys.config</Keys>
  <AntiFlicker>no</AntiFlicker>
  <MouseDiv>2</MouseDiv>
  <ShowInactiveIcons>no</ShowInactiveIcons>
  <SnapFormat>z80</SnapFormat>

  <AyChip>
    <Chip>ym</Chip>
    <Vol>ay</Vol>
    <Pan>acb</Pan>
  </AyChip>

  <TsfmMode>tsfm</TsfmMode>
  <EnableCovox>no</EnableCovox>

  <SoundEnable>yes</SoundEnable>
  <MixerMode>0</MixerMode>
  <UseSdlSound>yes</UseSdlSound>
  <SdlBufferSize>4</SdlBufferSize>
  <OssFragNum>64</OssFragNum>
  <WqSize>5</WqSize>

  <Joysticks>
    <Kempston>
      <Enable>yes</Enable>
      <SysJoystickNum>-1</SysJoystickNum>
      <AxisTreshold>3200</AxisTreshold>
    </Kempston>
  </Joysticks>

  <CpuTrace>
    <Enabled>no</Enabled>
    <Format>"[PC]> [M1]:[M2] dT=[DT] AF=[AF] BC=[BC] DE=[DE] HL=[HL] IX=[IX] IY=[IY] SP=[SP] I=[I] R=[R]"</Format>
    <FileName>cputrace.log</FileName>
  </CpuTrace>
</root>
